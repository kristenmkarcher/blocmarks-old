<h1>Edit Topic</h1>

 <div class="row">
   <div class="col-md-4">
     <p>Guidelines for topics</p>
     <ul>
       <li>Keep topics appropriate</li>
       <li>No foul language</li>
     </ul>
   </div>
   <div class="col-md-8">
     <%= form_for @topic do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter topic title" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>
